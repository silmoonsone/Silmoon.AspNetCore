@page
@attribute [Authorize]
@using Silmoon.AspNetCore.UserAuthTest.Models
@using Silmoon.AspNetCore.UserAuthTest.Models.SubModels
@using Silmoon.Extension
@model Silmoon.AspNetCore.UserAuthTest.Pages.PasskeyListModel
@inject ISilmoonAuthService SilmoonAuthService
@{
    ViewBag.Title = "Passkey List";
    UserWebAuthnInfo[] userWebAuthnInfos = ViewBag.UserWebAuthnInfos as UserWebAuthnInfo[];
    var user = await SilmoonAuthService.GetUser<User>();
}
<div>
    <div class="d-flex justify-content-between align-items-center">
        <div>Passkey list</div>
        <div>
            <div style="text-align: end">
                <button class="btn btn-primary" onclick="onCreatePasskey()">Create</button>
                <button class="btn btn-primary" onclick="onVerify('@user._id', {do: 'verifyUser'})">Verify(User)</button>
                <button class="btn btn-primary" onclick="onVerify(null, {do: 'verifyAllUser'})">Verify(AllUser)</button>
            </div>
            <div class="pt-1" style="text-align: end">
                <button class="btn btn-primary ms-3" onclick="onInitWebAuthnRequest('@user._id', null, {do: 'verifyUser'})">onInitWebAuthnRequest</button>
                <button class="btn btn-primary" onclick="onValidateWebAuthnData()">onValidateWebAuthnData</button>
            </div>
            <div class="pt-1" style="text-align: end">
                <button class="btn btn-primary ms-3" onclick="onInitWebAuthnRequest('@user._id', 'diy', {do: 'verifyUser'})">onInitWebAuthnRequest with challenge</button>
                <button class="btn btn-primary" onclick="onValidateWebAuthnData('diy')">onValidateWebAuthnData with challenge</button>
            </div>
        </div>
    </div>
    <hr />
    <div>
        @if (userWebAuthnInfos.IsNullOrEmpty())
        {
            <div class="small text-secondary">No any passkey.</div>
        }
        else
        {
            @foreach (var item in userWebAuthnInfos)
            {
                <div class="card shadow p-3 my-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <span class="mark">[@item.PublicKeyAlgorithm]</span>
                            <span class="mark">[@item.AuthenticatorAttachment]</span>
                            <span class="mark">[@item.created_at.ToChineseFormat()]</span>
                            <span>@item.GetDeviceDescription()</span>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-danger deleteButton" onclick="onDeletePasskey('@item.CredentialId.GetBase64String()')">DELETE</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<script>
    async function onCreatePasskey() {
        var result = await createWebAuthn();
        if (result.Success) {
            alert("Passkey created successfully");
            location.reload();
        } else {
            alert("Failed to create passkey\r" + result.Message);
        }
    }

    async function onVerify(userId, flagData) {
        var result = await authenticateWebAuthn(userId, flagData);
        if (result.Success) {
            alert("Passkey verified successfully, flagData: " + JSON.stringify(result.Data));
        } else {
            alert("Failed to verify passkey\r" + result.Message);
        }
    }

    async function onDeletePasskey(credentialId) {
        var result = await deleteWebAuthn(credentialId);
        if (result.Success) {
            alert("Passkey deleted successfully");
            location.reload();
        } else {
            alert("Failed to delete passkey\r" + result.Message);
        }
    }
</script>

<script>
    async function onInitWebAuthnRequest(userId, challenge = null, flagData = null) {
        var result = await initWebAuthnRequest(userId, challenge, flagData);
        if (result.Success) {
            console.log(JSON.stringify(result));
            Data = result.Data;
            alert("Data: " + JSON.stringify(result.Data));
        } else {
            alert("Failed to verify passkey\r" + result.Message);
        }
        console.log(result);
    }

    async function onValidateWebAuthnData(challenge = null) {
        try {
            const formData = new FormData();
            formData.append('webAuthnData', JSON.stringify(Data));
            if(typeof challenge == 'string' && challenge.length > 0) formData.append('challenge', challenge);
            const result = await fetch("/Api/ValidateWebAuthnData", {
                method: 'POST',
                body: formData
            });
            if (result.ok) {
                const resultJson = await result.json();
                if(resultJson.Success){
                    alert("Passkey data validated successfully");
                }else{
                    alert("Failed to validate passkey data\r" + resultJson.Message);
                }
            } else {
                alert("Failed to validate passkey data\r" + result.statusText);
            }
        } catch (err) {
            alert("Failed to validate passkey data\r" + err);
        }
    }
</script>