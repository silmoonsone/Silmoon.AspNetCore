@page "/js-test"
@rendermode InteractiveServer
@inject JsComponentInterop Jsc
@inject IJSRuntime Js
<h3>JsTestRp</h3>

<div>
    <button @onclick="Toast">Toast</button>
    <button @onclick="() => MetroUIConfirm(DateTime.Now.ToString())">MetroUIConfirm</button>
</div>

@code {
    private async Task Toast()
    {
        await Jsc.Toast("hello");
    }
    private async Task MetroUIConfirm(string msg)
    {
        await Jsc.MetroUIConfirm("title", "msg", true, async result =>
        {
            if (result)
            {
                await Jsc.Toast("confirm is true(" + msg + ")");
            }
            else
            {
                await Jsc.Toast("confirm is false");
            }
        });
    }
}