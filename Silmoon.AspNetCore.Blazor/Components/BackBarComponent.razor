<div class="d-grid" style="grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr); line-height: 30px;">
    <div>
        <NavLink href="@BackLink" id="____s_b_backbar_left_button" style="width: 30px; padding: 0px 3px 0px 7px; border-radius: 5px; display: block;">
            @if (BackButtonIsBlack)
            {
                <img style="width: 12px; height: 20px;" src="data:image/png;base64," />
            }
            else
            {
                <img style="width: 12px; height: 20px;" src="data:image/png;base64," />
            }
        </NavLink>
    </div>
    <div class="text-center"><span class="b" style="font-size: 18px; color: @TitleColor.ToString()">@Title</span></div>
    <div class="text-end"><span class="">@ChildContent</span></div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public HtmlColor TitleColor { get; set; } = HtmlColor.Black;
    [Parameter]
    public string BackLink { get; set; } = "javascript:history.back();";
    [Parameter]
    public bool BackButtonIsBlack { get; set; } = true;
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}

